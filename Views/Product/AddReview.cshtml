@model ElectrosLtdApplication.Models.ReviewModel

@{
    ViewBag.Title = "AddReview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddReview</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>ReviewModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ReviewComment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ReviewComment)
            @Html.ValidationMessageFor(model => model.ReviewComment)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

